<%- include("./partials/header") %>

    <div class="container text-capitalize">
        <main class="row gx-sm-3 gx-md-5">
            <% companies.forEach(company=> {%>
                <div class="col-12 col-md-6 col-lg-4 d-flex justify-content-center mb-5">
                    <div class="card w-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= company.name %>
                            </h5>
                            <p class="card-text">
                                CIN: <strong> <%= company.cin %></strong>
                                
                                City: <strong><%= company.city %></Strong>
                            </p>
                            <a href="#" class="btn btn-dark">More</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </main>
    </div>


    <%- include("./partials/footer") %>